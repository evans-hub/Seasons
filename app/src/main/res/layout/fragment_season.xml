<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#35B9EC"
    android:id="@+id/parentLayout">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:background="#35B9EC">

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/birdsImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Start" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/btn"
            android:orientation="horizontal">

        <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:text="Stop" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        </LinearLayout>


        <ImageView
            android:id="@+id/cloudImageView"
            android:layout_width="191dp"
            android:layout_height="91dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@drawable/cloud_1" />

        <ImageView
            android:id="@+id/sunImageView"
            android:layout_width="104dp"
            android:layout_height="99dp"
            android:layout_below="@id/cloudImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-33dp"
            android:src="@drawable/sun3f" />

        <ImageView
            android:id="@+id/birdsImageView"
            android:layout_width="168dp"
            android:layout_height="111dp"
            android:layout_below="@id/cloudImageView"
            android:layout_alignParentEnd="true"
            android:src="@drawable/birds_1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/wheelCoverLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF4500"
        android:orientation="vertical">
<TextView
    android:id="@+id/dateTimeTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:textSize="20sp"
    />
        <ImageView
            android:id="@+id/wheelImageView"
            android:layout_width="194dp"
            android:layout_height="142dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/wheeloftime" />

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/spring" />
    </LinearLayout>
</LinearLayout>
